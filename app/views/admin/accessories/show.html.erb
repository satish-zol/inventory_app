<div class="form-group">
  <strong>Name:</strong> <%= @accessory.name %>
</div>

<div class="form-group">
  <strong>Type:</strong> <%= @accessory.accessory_type %>
</div>

<div class="form-group">
  <strong>Price:</strong> <%= @accessory.price.round(2) rescue nil %>
</div>

<div class="form-group">
  <strong>Created at:</strong> <%= @accessory.created_at.strftime("%Y-%m-%d %H:%M:%S") rescue nil %>
</div>

<div class="form-group">
  <strong>Updated at:</strong> <%= @accessory.updated_at.strftime("%Y-%m-%d %H:%M:%S") rescue nil %>
</div>

<%= link_to 'Edit', edit_admin_accessory_path(@accessory) %> |
<%= link_to 'Back', admin_accessories_path %>
