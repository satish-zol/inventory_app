<div class="form-group">
  <strong>Name:</strong> <%= @product.name %>
</div>

<div class="form-group">
  <strong>Brand:</strong> <%= @product.brand %>
</div>

<div class="form-group">
  <strong>Model:</strong> <%= @product.model %>
</div>

<div class="form-group">
  <strong>Type:</strong> <%= @product.product_type %>
</div>

<div class="form-group">
  <strong>Number of Strings:</strong> <%= @product.strings %>
</div>

<div class="form-group">
  <strong>Serial number:</strong> <%= @product.serial_number %>
</div>

<div class="form-group">
  <strong>Price:</strong> <%= @product.price.round(2) rescue nil %>
</div>

<div class="form-group">
  <strong>Purchased at:</strong> <%= @product.purchased_at.strftime("%Y-%m-%d") rescue nil %>
</div>

<div class="form-group">
  <strong>Sold at:</strong> <%= @product.sold_at.strftime("%Y-%m-%d") rescue nil %>
</div>

<div class="form-group">
  <strong>Created at:</strong> <%= @product.created_at.strftime("%Y-%m-%d %H:%M:%S") rescue nil %>
</div>

<div class="form-group">
  <strong>Updated at:</strong> <%= @product.created_at.strftime("%Y-%m-%d %H:%M:%S") rescue nil %>
</div>

<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>